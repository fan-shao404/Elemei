<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ToggleButton
        android:id="@+id/tb_commodity"
        android:layout_width="25dp"
        android:background="@drawable/selceter_shopping_car"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textOn=""
        android:textOff=""
        android:checked="false"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_height="25dp"/>

    <ImageView
        android:id="@+id/iv_cover"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tb_commodity"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/tv_commodity_name"
        android:layout_width="0dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_cover"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_cover"
        android:layout_marginRight="@dimen/dp_40"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="卤干子"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_commodity_price"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/iv_cover"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="卤干子"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_commodity_sum"
        android:layout_width="80dp"
        android:background="@drawable/gray_20"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_10"
        android:text="0"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>