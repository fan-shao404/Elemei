<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view_store"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/white_5"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/dp_10"/>

    <ImageView
        android:id="@+id/iv_store_cover"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="@+id/view_store"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/view_store"
        app:layout_constraintLeft_toLeftOf="@+id/view_store"/>

    <TextView
        android:id="@+id/tv_store_name"
        app:layout_constraintTop_toTopOf="@+id/iv_store_cover"
        app:layout_constraintLeft_toRightOf="@+id/iv_store_cover"
        android:layout_marginLeft="10dp"
        android:lines="1"
        android:ellipsize="end"
        android:text="老师的封建士大夫打开跌幅达到了胜多负少"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_width="0dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toLeftOf="@+id/iv_store_more"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_store_more"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@mipmap/ic_store_more"
        android:layout_marginRight="@dimen/dp_10"
        app:layout_constraintRight_toRightOf="@+id/view_store"
        app:layout_constraintBottom_toBottomOf="@+id/tv_store_name"/>

    <TextView
        android:id="@+id/tv_store_score"
        app:layout_constraintLeft_toLeftOf="@+id/tv_store_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FA7248"
        android:textSize="16dp"
        android:text="5.0分"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_store_score"
        android:text="月售999"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@+id/tv_store_score"/>

    <TextView
        android:id="@+id/tv_store_start_send"
        android:layout_width="wrap_content"
        android:text="起送￥10"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_store_score"
        app:layout_constraintLeft_toLeftOf="@+id/tv_store_score"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/tv_store_start_send"
        android:text="配送￥1"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/tv_store_score"
        android:id="@+id/tv_store_distribution"/>

</androidx.constraintlayout.widget.ConstraintLayout>