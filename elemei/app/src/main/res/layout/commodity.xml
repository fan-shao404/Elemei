<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_commodity_cover"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@color/blue"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <TextView
        android:id="@+id/tv_commodity_name"
        app:layout_constraintLeft_toRightOf="@+id/iv_commodity_cover"
        android:text="煎包5个"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="@+id/iv_commodity_cover"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_commodity_month_sale"
        app:layout_constraintTop_toBottomOf="@+id/tv_commodity_name"
        app:layout_constraintLeft_toLeftOf="@+id/tv_commodity_name"
        android:text="月售"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_commodity_price"
        app:layout_constraintLeft_toLeftOf="@+id/tv_commodity_name"
        android:text="￥100"
        android:textColor="#FF0016"
        app:layout_constraintBottom_toBottomOf="@+id/iv_commodity_cover"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_commodity_add"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/iv_commodity_cover"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@mipmap/ic_commodity_add"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/tv_commodity_sum"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/iv_commodity_cover"
        android:layout_marginRight="@dimen/dp_40"
        android:text="5"
        android:gravity="center"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <ImageView
        android:id="@+id/iv_commodity_subtract"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/iv_commodity_cover"
        android:layout_marginRight="70dp"
        android:background="@mipmap/ic_commodity_subtract"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>